<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.example.healthschedule.utils.CustomView
                android:id="@+id/view_monday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:image="@drawable/monday"
                android:onClick="onClick"></com.example.healthschedule.utils.CustomView>

            <com.example.healthschedule.utils.CustomView
                android:id="@+id/view_tuesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:image="@drawable/tuesday"
                android:onClick="onClick"
                app:layout_constraintTop_toBottomOf="@+id/view_monday"></com.example.healthschedule.utils.CustomView>

            <com.example.healthschedule.utils.CustomView
                android:id="@+id/view_wednesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:image="@drawable/wednesday"
                android:onClick="onClick"
                app:layout_constraintTop_toBottomOf="@+id/view_tuesday"></com.example.healthschedule.utils.CustomView>

            <com.example.healthschedule.utils.CustomView
                android:id="@+id/view_thursday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:image="@drawable/thursday"
                android:onClick="onClick"
                app:layout_constraintTop_toBottomOf="@+id/view_wednesday"></com.example.healthschedule.utils.CustomView>

            <com.example.healthschedule.utils.CustomView
                android:id="@+id/view_friday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:image="@drawable/friday"
                android:onClick="onClick"
                app:layout_constraintTop_toBottomOf="@+id/view_thursday"></com.example.healthschedule.utils.CustomView>

            <com.example.healthschedule.utils.CustomView
                android:id="@+id/view_saturday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:image="@drawable/saturday"
                android:onClick="onClick"
                app:layout_constraintTop_toBottomOf="@+id/view_friday"></com.example.healthschedule.utils.CustomView>

            <com.example.healthschedule.utils.CustomView
                android:id="@+id/view_sunday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:image="@drawable/sunday"
                android:onClick="onClick"
                app:layout_constraintTop_toBottomOf="@+id/view_saturday"></com.example.healthschedule.utils.CustomView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_check"
        style="@style/FloatingActionButton"
        android:src="@mipmap/ic_check"
     />

</androidx.constraintlayout.widget.ConstraintLayout>